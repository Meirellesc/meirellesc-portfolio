
<MudContainer Class="d-flex flex-column justify-center pa-16" Style="height:60vh">

    <MudText Align="Align.Center"
             Typo="Typo.h3"
             Color="Color.Primary">
        @((MarkupString)HeaderTitle!.Value)
    </MudText>

    <MudText Class="mt-4"
             Align="Align.Center"
             Typo="Typo.h5"
             Color="Color.Secondary">
        @((MarkupString)HeaderSubtitle!.Value)
    </MudText>

    <MudIconButton Class="mt-10"
                   Size="Size.Large"
                   Icon="@Icons.Material.Outlined.KeyboardArrowDown"
                   DisableRipple="true"
                   Style="width: max-content; align-self: center;" 
                   Color="Color.Secondary"
                   OnClick="() => OnScrollToElement()"/>
                    
</MudContainer>

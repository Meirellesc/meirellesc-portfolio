@page "/bio"
@using MeirellescPortfolio.Components

<PageTitle>@((MarkupString)StringLocalizer!["Title_Bio"].Value)</PageTitle>

<CascadingValue Name="HeaderTitle" Value="@(StringLocalizer!["Bio_Header_Title"])">
    <CascadingValue Name="HeaderSubtitle" Value="@(StringLocalizer!["Bio_Header_Subtitle"])">
        <HeaderCmpnt />
    </CascadingValue>
</CascadingValue>

<MudGrid Class="d-flex justify-center mb-16">
    <MudItem xs="12" md="6"
             Style="align-content:center">
        <MudText Align="Align.Justify"> 
            @((MarkupString)StringLocalizer!["Bio_MiniBio"].Value)
        </MudText>
    </MudItem>

    <MudItem xs="12" md="6"
             Style="text-align: center">
        <MudImage Src="/assets/logos/LM-LogoProfile.png"
                  Alt="Profile photo of Lucas Meirelles"
                  Style="width: 100%; max-width: 400px;" />
    </MudItem>
</MudGrid>

<FooterCmpnt />
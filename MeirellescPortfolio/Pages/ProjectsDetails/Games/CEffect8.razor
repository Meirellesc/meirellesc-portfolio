@page "/projects/CEffect8"

@using MeirellescPortfolio.Components

<MudContainer MaxWidth="MaxWidth.Medium">

    <MudText Align="Align.Center"
             Typo="Typo.h5"
             Style="text-transform: uppercase;"
             Class="my-16">
        
        CEffect 8

    </MudText>

    <MudDivider/>

    <MudGrid Class="my-16 d-block justify-center gap-x-2"
             Style="text-align:center">

        <MudIcon Icon="@Icons.Material.Outlined.VideogameAsset"/>

        <MudText Align="Align.Center"
                 Typo="Typo.h6">

            Game Project

        </MudText>

    </MudGrid>

    <MudImage 
        Fluid="true"
        Src="/assets/projects/ceffect8/banner1Blur.png" />

    
    <MudGrid Class="py-12 px-2">

        <MudItem xs="12" sm="2" Class="align-content-center">
            <MudText Align="Align.Center"
                     Typo="Typo.h6"
                     Style="text-transform: uppercase;">

                About
            </MudText>
        </MudItem>

        <MudItem xs="12" sm="10" Style="height:auto">
            <MudText Align="Align.Justify"
                     Typo="Typo.body1"
                     Class="d-inline-flex flex-column">

                MAGE is a game development community with monthly events to benefit and publicize the community's work, in addition to weekly meetings in support of game development.
            
            </MudText>

            <MudText Align="Align.Justify"
                     Typo="Typo.body1"
                     Class="d-inline-flex flex-column">
            
                In this first edition of MAGEJam, let's start the year 2022 by going straight to what matters: GAME DEV! In this event you will have to develop a mini game for a week following the theme: COLLATERAL EFFECT!
            </MudText>

        
        </MudItem>
    </MudGrid>    


    <MudImage Src="/assets/projects/ceffect8/banner2Blur.png"
              Style="width: 100%; max-width: 700px;" />

    <MudGrid Class="py-16 px-2 gap-y-2">

        <MudItem xs="12" Class="align-content-center">
            <MudText Align="Align.Center"
                     Typo="Typo.h6"
                     Style="text-transform: uppercase;">

                Story
            </MudText>
        </MudItem>

        <MudItem xs="12" Style="height:auto">

            <MudText Align="Align.Justify"
                     Typo="Typo.body1"
                     Class="d-inline-flex flex-column">

                After experimenting with his new medicine that leads to a cure for sadness, scientist Dr. Serotons is transported to a dangerous alternative reality where he must defend himself of mysterious enemies.
            </MudText>


        </MudItem>


    </MudGrid>

    <MudDivider/>

    <MudGrid Class="pt-16 pb-8 px-2 gap-y-2">
        <MudItem xs="12" Class="align-content-center">
            <MudText Align="Align.Center"
                     Typo="Typo.h6"
                     Style="text-transform: uppercase;">

                Character
            </MudText>
        </MudItem>
    

        <MudItem xs="12" Style="text-align:center">
            <MudImage Src="/assets/projects/ceffect8/Character.png" 
                      Class="rounded-lg" 
                      Style="width: 100%; max-width: 450px" />
        </MudItem>
    </MudGrid>

    <MudGrid Class="pb-8 px-2 gap-y-2">
        <MudItem xs="12" Class="align-content-center">
            <MudText Align="Align.Center"
                     Typo="Typo.h6"
                     Style="text-transform: uppercase;">

                Enemies
            </MudText>
        </MudItem>


        <MudItem xs="12" Style="text-align:start">
            <MudImage Src="/assets/projects/ceffect8/Enemy.png"
                      Class="rounded-lg"
                      Style="width: 100%; max-width: 450px" />
        </MudItem>

        <MudItem xs="12" Style="text-align:end">
            <MudImage Src="/assets/projects/ceffect8/Enemy2.png"
                      Class="rounded-lg"
                      Style="width: 100%; max-width: 450px" />
        </MudItem>
    </MudGrid>

    <MudGrid Class="pb-8 px-2 gap-y-2">
        <MudItem xs="12" Class="align-content-center">
            <MudText Align="Align.Center"
                     Typo="Typo.h6"
                     Style="text-transform: uppercase;">

                Screenshots
            </MudText>
        </MudItem>


        <MudItem xs="12" Style="text-align:start">
            <MudImage Src="/assets/projects/ceffect8/SS1.png"
                      Style="width: 100%; max-width: 450px" />
        </MudItem>

        <MudItem xs="12" Style="text-align:center">
            <MudImage Src="/assets/projects/ceffect8/SS2.png"
                      Class="rounded-lg"
                      Style="width: 100%; max-width: 450px" />
        </MudItem>

        <MudItem xs="12" Style="text-align:end">
            <MudImage Src="/assets/projects/ceffect8/SS3.png"
                      Class="rounded-lg"
                      Style="width: 100%; max-width: 450px" />
        </MudItem>
    </MudGrid>


    <MudImage Src="/assets/projects/ceffect8/banner2Blur.png"
              Style="width: 100%; max-width: 700px;" />

    <MudGrid Class="py-16 px-2 gap-y-2">
        <MudItem xs="12" Class="align-content-center">
            <MudText Align="Align.Center"
                     Typo="Typo.h6"
                     Style="text-transform: uppercase;">

                Softwares & Frameworks
            </MudText>
        </MudItem>


        <MudItem xs="12" Class="d-flex gap-x-16 justify-center">
            <MudImage Src="/assets/logos/Figma.png"
                      Class="rounded-lg"
                      Fluid="false"
                      Height="50" />

            <MudImage Src="/assets/logos/Unity.png"
                      Class="rounded-lg"
                      Fluid="false"
                      Height="50" />

            <MudImage Src="/assets/logos/VisualStudio.png"
                      Class="rounded-lg"
                      Fluid="false"
                      Height="50" />
        </MudItem>

    </MudGrid>

    <MudDivider />

    <MudText Align="Align.Center"
             Typo="Typo.h6"
             Style="text-transform: uppercase;"
             Class="mt-16 mb-8">

        Thank You

    </MudText>

    <FooterCmpnt/>

</MudContainer>



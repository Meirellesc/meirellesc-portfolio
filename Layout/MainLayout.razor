@inherits LayoutComponentBase;

<MudThemeProvider Theme="CustomTheme" />
<MudDialogProvider FullWidth="true"
                   CloseButton="false"
                   DisableBackdropClick="false"
                   MaxWidth="MaxWidth.ExtraSmall"
                   Position="DialogPosition.TopLeft"
                   CloseOnEscapeKey="true" />
<MudSnackbarProvider />

<MudScrollToTop>
    <MudFab StartIcon="@Icons.Material.Outlined.ArrowCircleUp"
            IconSize="Size.Medium"
            Style="height: 45px; width:45px"
            IconColor="Color.Tertiary"
            Color="Color.Dark"/>
</MudScrollToTop>

<MudLayout>
    @if (_isHomePage)
    {

    }
    else
    {
        if (_breakpoint <= Breakpoint.Xs)
        {
            <MudAppBar Fixed="true"
                       Dense="false"
                       Elevation="4"
                       Style="box-shadow: 0px -5px 20px 0px #B6F2D6;">

                <MudIconButton Icon="@Icons.Material.Outlined.Menu" 
                               Color="Color.Inherit" 
                               Edge="Edge.Start" 
                               OnClick="OpenMenu"/>

                <MudSpacer />

                <MudItem Class="d-flex flex-wrap flex-row justify-center align-center gap-2">

                    <MudIconButton Icon="@Icons.Custom.Brands.GitHub"
                                   Color="Color.Inherit"
                                   Size="Size.Small"
                                   Href="https://github.com/Meirellesc"
                                   Target="_blank" />

                    <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn"
                                   Color="Color.Inherit"
                                   Size="Size.Small"
                                   Href="https://www.linkedin.com/in/lucasmeirellesc/"
                                   Target="_blank" />

                    <MudIconButton Icon="@Icons.Material.Outlined.Email"
                                   Color="Color.Inherit"
                                   Size="Size.Small"
                                   Href="contact" />

                </MudItem>
            </MudAppBar>
        }
        else
        {
            <MudAppBar Fixed="true"
                       Dense="false"
                       Elevation="4"
                       Style="box-shadow: 0px -5px 20px 0px #B6F2D6;">

                <MudImage Src="/assets/logos/LM-LogoProfile-Shadow.png"
                          Alt="Profile photo of Lucas Meirelles"
                          Style="width: 100%; max-width: 30px; margin: 0px 18px 4px 0px;" />

                <MudButton Color="Color.Inherit"
                           StartIcon="@Icons.Material.Outlined.Signpost"
                           Style="margin-right: 15px"
                           Href="/">
                    @StringLocalizer?["AppBar_Home"]
                </MudButton>

                <MudButton Color="Color.Inherit"
                           StartIcon="@Icons.Material.Outlined.Badge"
                           Style="margin-right: 15px"
                           Href="bio">
                    @StringLocalizer?["AppBar_Bio"]
                </MudButton>

                <MudButton Color="Color.Inherit"
                           StartIcon="@Icons.Material.Outlined.Code"
                           Style="margin-right: 15px"
                           Href="projects">
                    @StringLocalizer?["AppBar_Projects"]
                </MudButton>

                <MudButton Color="Color.Inherit"
                           StartIcon="@Icons.Material.Outlined.QuestionAnswer"
                           Style="margin-right: 15px"
                           Href="contact">
                    @StringLocalizer?["AppBar_Contact"]
                </MudButton>

                <MudSpacer />

                <MudItem Class="d-flex flex-wrap flex-row justify-center align-center gap-2">

                    <MudIconButton Icon="@Icons.Custom.Brands.GitHub" 
                                   Color="Color.Tertiary"
                                   Size="Size.Small"
                                   Href="https://github.com/Meirellesc" 
                                   Target="_blank"/>

                    <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn"
                                   Color="Color.Tertiary"
                                   Size="Size.Small"
                                   Href="https://www.linkedin.com/in/lucasmeirellesc/"
                                   Target="_blank" />

                    <MudIconButton Icon="@Icons.Material.Outlined.Email"
                                   Color="Color.Tertiary"
                                   Size="Size.Small"
                                   Href="contact" />

                </MudItem>
            </MudAppBar>
        }
    }

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 py-2">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>